<!DOCTYPE html>
<%- include('include/head'); %>
<head>
    <link rel="stylesheet" href="stylesheets/navbar-fixed-left.css">
</head>
<html lang="en">
    <body>
        <%- include('include/navbar'); %>
        <%- include('include/toolbox'); %>
        <%- include('include/specific-components'); %>
        <%- include('include/general-components'); %>
        
        <div class="canvas-container" id="general-container">
          <div class="row">
            <div class="col-lg-6">
              <legend>General Configuration</legend>
              <div class="form-group">
                <label >Menus Transitions</label>
                <select class="custom-select transition-select" target='menus'>
                  <option>CUT</option>
                  <option>FADE</option>
                  <option>FADETOBLACK</option>
                </select>
              </div>
              <div class="form-group">
                <label >Text Choice Transition</label>
                <select class="custom-select transition-select" target='textChoices'>
                  <option>CUT</option>
                  <option>FADE</option>
                  <option>FADETOBLACK</option>
                </select>
              </div>
              <div class="form-group">
                <label >Visual Choices Transition</label>
                <select class="custom-select transition-select" target='visualChoices'>
                  <option>CUT</option>
                  <option>FADE</option>
                  <option>FADETOBLACK</option>
                </select>
              </div>
              <div class="form-group">
                <label for="canvas-color">Color</label>
                <div class="input-group colorpicker-component">
                  <input type="text" class="form-control" id="canvas-color" value="#000000"/>
                  <span class="input-group-append">
                    <span class="input-group-text colorpicker-input-addon"><i></i></span>
                  </span>
                </div>
              </div>
              <div class="form-group">
                <label >FADE Time</label>
                <input type="number" class="form-control" id="fadeTimeInput" value=750>
              </div>
              <div class="form-group">
                <div class="custom-control custom-switch">
                  <input type="checkbox" class="custom-control-input" id="logChoicesInput" checked="">
                  <label class="custom-control-label" for="logChoicesInput">Log Choices</label>
                </div>
                <!-- <div class="custom-control custom-switch">
                  <input type="checkbox" class="custom-control-input" id="logTextInput" disabled="" >
                  <label class="custom-control-label" for="logTextInput">Log Text</label>
                </div> -->
              </div>
            </div>
            <div class="col-lg-6">
              <legend>Menus</legend>
              <table class="table table-hover">
                <!-- <thead>
                  <tr>
                    <th scope="col">Menu</th>
                    <th scope="col" class="action-col"></th>
                  </tr>
                </thead> -->
                <tbody>
                  <tr>
                    <td>
                      <div class="form-group">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input menu-exists" id="loader-exists" onclick="toggleMenu(`loader`)">
                          <label class="custom-control-label" for="loader-exists">Loading Page</label>
                        </div>
                      </div>
                    </td>
                    <td class="action-col"><button class="btn btn-icon btn-cta-secondary" onclick="changeMenu('loader');"><i class="fas fa-palette"></i></button> <button class="btn btn-icon btn-cta-secondary" onclick="clearMenu('loader')"><i class="fas fa-trash-alt"></i></button></td>
                  </tr>
                  <tr>
                    <td>

                      <div class="form-group">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input menu-exists" id="hud-exists" onclick="toggleMenu(`hud`)">
                          <label class="custom-control-label" for="hud-exists">HUD</label>
                        </div>
                      </div>
                    </td>
                    <td class="action-col"><button class="btn btn-icon btn-cta-secondary" onclick="changeMenu('hud');"><i class="fas fa-palette"></i></button> <button class="btn btn-icon btn-cta-secondary" onclick="clearMenu('hud')"><i class="fas fa-trash-alt"></i></button></td>
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input menu-exists" id="main-exists" onclick="toggleMenu(`main`)">
                          <label class="custom-control-label" for="main-exists">Main Menu</label>
                        </div>
                      </div>
                    </td>
                    <td class="action-col"><button class="btn btn-icon btn-cta-secondary" onclick="changeMenu('main');"><i class="fas fa-palette"></i></button> <button class="btn btn-icon btn-cta-secondary"onclick="clearMenu('main')"><i class="fas fa-trash-alt"></i></button></td>
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input menu-exists" id="settings-exists"  onclick="toggleMenu(`settings`)">
                          <label class="custom-control-label" for="settings-exists">Settings Menu</label>
                        </div>
                      </div>
                    </td>
                    <td class="action-col"><button class="btn btn-icon btn-cta-secondary" onclick="changeMenu('settings');"><i class="fas fa-palette"></i></button> <button class="btn btn-icon btn-cta-secondary" onclick="clearMenu('settings')"><i class="fas fa-trash-alt"></i></button></td>
                  </tr>
                  <tr>
                    <td>
                      <div class="form-group">
                        <div class="custom-control custom-switch">
                          <input type="checkbox" class="custom-control-input menu-exists" id="saveload-exists" onclick="toggleMenu(`saveload`)">
                          <label class="custom-control-label" for="saveload-exists">Save/Load Menu</label>
                        </div>
                      </div>
                    </td>
                    <td class="action-col"><button class="btn btn-icon btn-cta-secondary" onclick="changeMenu('saveload');"><i class="fas fa-palette"></i></button> <button class="btn btn-icon btn-cta-secondary" onclick="clearMenu('saveload')"><i class="fas fa-trash-alt"></i></button></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <div class="card text-white mb-3 bg-secondary">
                <div class="card-header">Fonts
                  <button type="button" class="close text-white add-font"><i class="fas fa-plus" data-toggle="tooltip" data-placement="top" title="Add Font" onclick="openFontsModal()"></i></button>
                </div>
                <div class="card-body">
                  <table class="table table-hove table-secondary">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col" colspan="2">
                          <div class="input-group">
                            <input class="form-control font-text" value="Murcielago">
                            <div class="input-group-append">
                              <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('normal')">N</button>
                              <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('italic')"><i>i</i></button>
                              <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('bold')"><b>B</b></button>
                            </div>
                          </div>
                        </th>
                      </tr>
                    </thead>
                    <tbody id="fonts-table">
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="card text-white mb-3 bg-secondary">
                <div class="card-header">Audio
                  <button type="button" class="close text-white remove-font" data-toggle="tooltip" data-placement="top" title="Add Audio" onclick="openAudioModal()"><i class="fas fa-plus" ></i></button>
                </div>
                <div class="card-body">

                  <table class="table table-hove table-secondary">
                    <thead>
                      <tr>
                        <th scope="col">Name</th>
                        <th scope="col">Type</th>
                        <th scope="col"></th>
                      </tr>
                    </thead>
                    <tbody id="audio-table">
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="canvas-container" id="canvas-container">
          <div id='preload-canvas'></div>
        </div>

        <div class="modal" id="confirm-modal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Are you sure?</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
                <p>This action will remove all contents from the <span id="confirm-menu"></span> screen. You can also deactivate it without removing the current contents from the General Configuration section (switch off the menu you don't want to use). </p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="confirm-button" data-dismiss="modal">Remove Contents</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
              </div>
            </div>
          </div>
        </div>

        <div class="modal" id="error-modal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">There is a problem!</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <div class="modal" id="generating-modal">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h4 class="modal-title">Generating!</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <div class="modal-body">
                <i class="fa fa-cog fa-spin fa-3x fa-fw"></i>
                <p>Your GUI was successfully generated and can be found in the build directory.</p>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-primary" id='open-dir'>Open Directory</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              </div>
            </div>
          </div>
        </div>

        <script type="text/javascript">
            gui = JSON.parse('<%- gui %>');
            guiName = "<%= name %>";
        </script>


        <script src="jquery/jquery.min.js"></script>
        <script src="popper/popper.min.js"></script>
        <script src="bootstrap/js/bootstrap.min.js"></script>
        <script src="bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
        <script src="js/phaser.min.js"></script>
        <script src="js/add-components.js"></script>
        <script src="js/toolbox.js"></script>
        <script src="js/edit-gui.js"></script>
    </body>
</html>


