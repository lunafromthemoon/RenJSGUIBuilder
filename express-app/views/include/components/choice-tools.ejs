<% id=(includeTitle) ? "choice" : "choice-start" %>
<div class="accordion mb-3" id="<%= id %>-accordion">
  <%if (includeTitle) {%>
    <div class="card text-white bg-secondary border-light">
      <div class="card-header border-light"><h4 class="mb-0">Choices</h4></div>
    </div>
    <div class="card text-white bg-secondary border-light">
      <div class="card-header" id="messageBoxHeader4">
        <a class="collapsed" type="button" data-toggle="collapse" data-target="#choice-sample-tool" aria-expanded="false" aria-controls="choice-sample-tool">
          <i class="fas fa-eye"></i> Display #
        </a>
      </div>
      <div id="choice-sample-tool" class="collapse" aria-labelledby="messageBoxHeader4" data-parent="#choice-accordion">
        <div class="card-body">
          <div class="form-group">
            <label for="choice-sample">Sample Choices</label>
            <input type="number" class="form-control" id="choice-sample"/>
          </div>
        </div>
      </div>
    </div>
  <%}%>
  <div class="card text-white bg-secondary border-light">
    <div class="card-header" id="<%= id %>LayoutHeader">
      <a class="collapsed" type="button" data-toggle="collapse" data-target="#<%= id %>-layout-tool" aria-expanded="false" aria-controls="<%= id %>-layout-tool">
        <i class="fas fa-thumbtack"></i> Layout
      </a>
    </div>
    <div id="<%= id %>-layout-tool" class="collapse" aria-labelledby="<%= id %>LayoutHeader" data-parent="#<%= id %>-accordion">
      <div class="card-body">
        
        <div class="form-group">
          <div class="custom-control custom-switch">
            <input type="checkbox" class="custom-control-input show-more-when-off" target='<%= id %>-box-not-centered-options' id="<%= id %>-box-centered" checked="">
            <label class="custom-control-label" for="<%= id %>-box-centered">Centered</label>
            <small class="form-text text-white">The choices can be automatically centered in the middle of the screen. If you don't want them to be centered, the position will indicate the position of the uppermost choice box. Further choice boxes will be added under the first one.</small>  
          </div>
        </div>
        <div id='<%= id %>-box-not-centered-options' class='collapse'>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">X</span>
              </div>
              <input type="number" class="form-control asset-x" id="<%= id %>-box-x" value="0">
            </div>
          </div>
          <div class="form-group">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">Y</span>
              </div>
              <input type="number" class="form-control asset-y" id="<%= id %>-box-y" value="0">
            </div>
          </div>  
          <div class="form-group">
            <label for="<%= id %>-alignment">Alignment</label>
            <select class="form-control" id="<%= id %>-alignment">
              <option value='top-down'>Top Down</option>
              <option value='bottom-up'>Bottom Up</option>
              <option value='centered'>Centered</option>
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="<%= id %>-separation">Separation</label>
          <input type="number" class="form-control" id="<%= id %>-separation" value="10"/>
        </div>
        
      </div>
    </div>
  </div>
  <%- include('partials/text-style', {id:id, text:"text"}); %>
  <div class="card text-white bg-secondary border-light">
    <div class="card-header" id="<%= id %>Header5">
      <a class="collapsed" type="button" data-toggle="collapse" data-target="#<%= id %>-chosen-tool" aria-expanded="false" aria-controls="<%= id %>-chosen-tool">
        <i class="fas fa-hand-point-up"></i> Previously chosen options
      </a>
    </div>
    <div id="<%= id %>-chosen-tool" class="collapse" aria-labelledby="<%= id %>Header5" data-parent="#<%= id %>-accordion">
      <div class="card-body">
        <div class="form-group">
          <label for="<%= id %>-chosen-color">Color</label>
          <div class="input-group colorpicker-component">
            <input type="text" class="form-control" id="<%= id %>-chosen-color" />
            <span class="input-group-append">
              <span class="input-group-text colorpicker-input-addon"><i></i></span>
            </span>
          </div>
        </div>
        <small class="form-text text-white">The choices the player makes during the game will be recorded as they play. When they replay the game, the previously chosen options can be tinted in a different color so the player will know which path they took before.</small>
      </div>
    </div>
  </div>
  <%- include('partials/text-position', {id:id}); %>
  <%- include('partials/sfx', {id:id}); %>
  <%if (includeTitle) {%>
    <%- include('partials/remove-button', {type:'choice'}); %>
  <%}%>
  
</div>
