<div class="col-lg-6">
  <div class="row">
    <div class="col-lg-12">
      <div class="card text-white mb-3 bg-secondary">
        <div class="card-header">Fonts
          <button type="button" class="close text-white add-font"><i class="fas fa-plus" data-toggle="tooltip" data-placement="top" title="Add Font" onclick="openModal('font-asset')"></i></button>
        </div>
        <div class="card-body">
          <table class="table table-hove table-secondary">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col" colspan="2">
                  <div class="input-group">
                    <input class="form-control font-text" value="Murcielago">
                    <div class="input-group-append">
                      <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('normal')">N</button>
                      <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('italic')"><i>i</i></button>
                      <button type="button" class="btn btn-outline-light" onclick="changeFontStyle('bold')"><b>B</b></button>
                    </div>
                  </div>
                </th>
              </tr>
            </thead>
            <tbody id="fonts-table">
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card text-white mb-3 bg-secondary">
        <div class="card-header">Images
          <button type="button" class="close text-white remove-font" data-toggle="tooltip" data-placement="top" title="Add Audio" onclick="openModal('image-asset')"><i class="fas fa-plus" ></i></button>
        </div>
        <div class="card-body">

          <table class="table table-hove table-secondary">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <!-- <th scope="col">Size</th> -->
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id="image-table">
              <tr class="image-row image-template collapse">
                <th class="align-middle image-name" scope="row"></th>
                <!-- <td class="align-middle image-size"></td> -->
                <td class="action-col">
                  <button class="btn btn-icon btn-outline-light show-image"><i class="fas fa-eye"></i></button>
                  <button class="btn btn-icon btn-outline-light remove-image"><i class="fas fa-trash-alt"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-lg-6">
  <div class="row">
    <div class="col-lg-12">
      <div class="card text-white mb-3 bg-secondary">
        <div class="card-header">Audio
          <button type="button" class="close text-white remove-font" data-toggle="tooltip" data-placement="top" title="Add Audio" onclick="openModal('audio-asset')"><i class="fas fa-plus" ></i></button>
        </div>
        <div class="card-body">

          <table class="table table-hove table-secondary">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id="audio-table">
              <tr class="audio-row audio-template collapse">
                <th class="align-middle audio-name" scope="row"></th>
                <td class="align-middle audio-type"></td>
                <td class="action-col">
                  <button class="btn btn-icon btn-outline-light play-audio"><i class="fas fa-play"></i></button>
                  <button class="btn btn-icon btn-outline-light remove-audio"><i class="fas fa-trash-alt"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="card text-white mb-3 bg-secondary">
        <div class="card-header">Spritesheets
          <button type="button" class="close text-white remove-font" data-toggle="tooltip" data-placement="top" title="Add Audio" onclick="openModal('spritesheet-asset')"><i class="fas fa-plus" ></i></button>
        </div>
        <div class="card-body">
          <table class="table table-hove table-secondary">
            <thead>
              <tr>
                <th scope="col">Name</th>
                <!-- <th scope="col">Size</th> -->
                <th scope="col">Frame</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id="spritesheets-table">
              <tr class="spritesheets-row spritesheet-template collapse">
                <th class="align-middle spritesheet-name" scope="row"></th>
                <!-- <td class="align-middle spritesheet-size"></td> -->
                <td class="align-middle spritesheet-frame"></td>
                <td class="action-col">
                  <button class="btn btn-icon btn-outline-light show-spritesheet"><i class="fas fa-eye"></i></button>
                  <button class="btn btn-icon btn-outline-light remove-spritesheet"><i class="fas fa-trash-alt"></i></button>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>